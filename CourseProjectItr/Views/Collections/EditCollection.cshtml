@model CourseProjectItr.Models.Collection

<head>
    <link rel="stylesheet" href="~/css/tagify.css" />
    <script src="~/js/tagify.min.js"></script>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/tags.js"></script>
</head>
<body onload="AddTheme()">
    <form asp-action="EditCollection" asp-controller="collections" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Name" class="control-label">Collection name</label>
            <input type="text" asp-for="Name" class="form-control" value="@Model.Name" required />
        </div>
        <div class="form-group" hidden>
            <label asp-for="OwnerEmail" class="control-label">Collection name</label>
            <input type="text" asp-for="OwnerEmail" class="form-control" value="@Model.OwnerEmail" required />
        </div>
        <div class="form-group">
            <label asp-for="Theme" class="control-label">Theme(required)</label>
            <input type="text" asp-for="Theme" class="form-control" value="@Model.Theme" id="input-custom-dropdown" placeholder="Select theme" required />
        </div>
        <div class="form-group">
            <label asp-for="Description" value="@Model.Description" class="control-label">Description</label>
            <input type="text" asp-for="Description" class="form-control" />
        </div>
        <div class="form-group" hidden>
            <label asp-for="Avatar" value="@Model.Avatar" class="control-label">Avatar</label>
            <input type="text" asp-for="Avatar" class="form-control" />
        </div>
        <div class="form-group">
            <input type="file" name="file" />
        </div>
        <button type="button" class="btn btn-primary mb-3" onclick="DisplayTags('requiredFields')">Edit required field for collection items</button>
        <div class="form-check" id="requiredFields" hidden>
            <div class="form-group">
                <input asp-for="IntField1" class="form-check-input" />
                <label asp-for="IntField1" class="form-check-label">Numeric field 1</label>
            </div>
            <div class="form-group">
                <input asp-for="IntField2" class="form-check-input" />
                <label asp-for="IntField2" class="form-check-label">Numeric field 2</label>
            </div>
            <div class="form-group">
                <input asp-for="IntField3" class="form-check-input" />
                <label asp-for="IntField3" class="form-check-label">Numeric field 3</label>
            </div>
            <div class="form-group">
                <input asp-for="OneLineField1" class="form-check-input" />
                <label asp-for="OneLineField1" class="form-check-label">One line field 1</label>
            </div>
            <div class="form-group">
                <input asp-for="OneLineField2" class="form-check-input" />
                <label asp-for="OneLineField2" class="form-check-label">One line field 2</label>
            </div>
            <div class="form-group">
                <input asp-for="OneLineField3" class="form-check-input" />
                <label asp-for="OneLineField3" class="form-check-label">One line field 3</label>
            </div>
            <div class="form-group">
                <input asp-for="TextField1" class="form-check-input" />
                <label asp-for="TextField1" class="form-check-label">Text field 1</label>
            </div>
            <div class="form-group">
                <input asp-for="TextField2" class="form-check-input" />
                <label asp-for="TextField2" class="form-check-label">Text field 2</label>
            </div>
            <div class="form-group">
                <input asp-for="TextField3" class="form-check-input" />
                <label asp-for="TextField3" class="form-check-label">Text field 3</label>
            </div>
            <div class="form-group">
                <input asp-for="DateField1" class="form-check-input" />
                <label asp-for="DateField1" class="form-check-label">Date field 1</label>
            </div>
            <div class="form-group">
                <input asp-for="DateField2" class="form-check-input" />
                <label asp-for="DateField2" class="form-check-label">Date field 2</label>
            </div>
            <div class="form-group">
                <input asp-for="DateField3" class="form-check-input" />
                <label asp-for="DateField3" class="form-check-label">Date field 3</label>
            </div>
            <div class="form-group">
                <input asp-for="BoolField1" class="form-check-input" />
                <label asp-for="BoolField1" class="form-check-label">Bool field 1</label>
            </div>
            <div class="form-group">
                <input asp-for="BoolField2" class="form-check-input" />
                <label asp-for="BoolField2" class="form-check-label">Bool field 2</label>
            </div>
            <div class="form-group">
                <input asp-for="BoolField3" class="form-check-input" />
                <label asp-for="BoolField3" class="form-check-label">Bool field 3</label>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Edit" class="btn btn-primary" />
        </div>
    </form>
</body>
