@model CourseProjectItr.Models.Collection

<head>
    <link rel="stylesheet" href="~/css/tagify.css" />
    <script src="~/js/tagify.min.js"></script>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/tags.js"></script>
</head>
<body onload="AddTheme()">
    <form asp-action="EditCollection" asp-controller="collections" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Name" class="control-label">Collection name</label>
            <input type="text" asp-for="Name" class="form-control" value="@Model.Name" required oninvalid="this.setCustomValidity('Enter collection name')" oninput="setCustomValidity('')" />
        </div>
        <div class="form-group">
            <label asp-for="Theme" class="control-label">Theme(required)</label>
            <input type="text" asp-for="Theme" class="form-control" value="@Model.Theme" id="input-custom-dropdown" placeholder="Select theme" required />
        </div>
        <div class="form-group">
            <label asp-for="Description" value="@Model.Description" class="control-label">Description</label>
            <input type="text" asp-for="Description" class="form-control" />
        </div>
        <div class="form-group">
            <input type="file" name="file" />
        </div>
        <div class="form-group">
            <input type="submit" value="Edit" class="btn btn-primary" />
        </div>
    </form>
</body>
