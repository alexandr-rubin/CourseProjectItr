@model IEnumerable<CourseProjectItr.Models.Collection>

    <a asp-action="Create" asp-route-userName="@Model.First().OwnerEmail" class="btn btn-primary m-2">Create New</a>

<table class="table">
    <tr><td></td><td>Collection name</td><td></td></tr>
    @foreach (var item in Model)
    {
<tr>
    <td>
        @for (int i = 0; i < ViewBag.avatar.Count; i++)
        {
            if (ViewBag.avatar[i].CollectionId == item.Id)
            {
                <img src="~/files/@ViewBag.avatar[i].FilePath" width="50" />
                break;
            }
        }
    </td>
    <td>
        <a asp-action="CollectionItems" asp-route-id="@item.Id">@item.Name</a>
    </td>
    <td>
        <a asp-action="Add" asp-route-id="@item.Id" class="btn btn-primary">Add</a>
        <a asp-action="DeleteCollection" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
    </td>
    
</tr>
    }
</table>